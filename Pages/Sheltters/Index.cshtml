@page
@model PetSearch.Pages.Sheltters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="item active">
        <img src="~/images/carousel/001.webp" alt="Los Angeles" style="width:100%; height: 100%;">
      </div>

      <div class="item">
        <img src="~/images/carousel/002.jpg" alt="Chicago" style="width:100%; height: 100%;">
      </div>
    
      <div class="item">
        <img src="~/images/carousel/003.jpg" alt="New york" style="width:100%; height: 100%;">
      </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<div id="search_pet">
    @foreach (var item in Model.Sheltter) {
    <div id="h1">
        <h1>@Html.DisplayFor(modelItem => item.NameSheltter)</h1>
            <h4>@Html.DisplayFor(modelItem => item.Address)</h4>
            <h4>@Html.DisplayFor(modelItem => item.Cellphone)</h4>
    </div>
    }
</div>
