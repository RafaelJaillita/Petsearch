@page
@model PetSearch.Pages.FormPetFindModel
@{
    ViewData["Title"] = "Form Find";
}
<form mthod="post">
		<div class="container">
			<div class="row">
					<h1>Pet Search</h1>
			</div>
			<div class="row">
					<h4 style="text-align:center">Your mascot is so important for us too!</h4>
			</div>
			
			<div class="row input-container">
				<div class="row">
					<h2 style="text-align:left" >Write your pet information</h2>
				</div>
					<div class="col-xs-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Kind animal</label> 
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Race</label> 
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<div class="styled-input wide" style="float:right;">
							<input type="text"  />
							<label>Last seen address</label> 
						</div>
					</div>
					<div class="col-xs-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Color</label>
						</div>
					</div>
					<div class="row">
						<h2 style="text-align:left">Write your information</h2>
					</div>
					<div class="col-xs-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Name</label> 
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Email</label> 
						</div>
					</div>
					<div class="col-md-6 col-sm-12">
						<div class="styled-input wide" style="float:right;">
							<input type="text"  />
							<label>Phone Number</label> 
						</div>
					</div>
					<div class="row">
						<h2 style="text-align:left">Write some extra information about your dog that might help to find it</h2>
					</div>
					<div class="col-xs-12">
						<div class="styled-input wide">
							<input type="text"  />
							<label>Message</label>
						</div>
					</div>
					<div class="row">
						<h2 style="text-align:left">Please insert an image of your mascot to make te search eassier</h2>
					</div>
					<div class="col-xs-12" >
						<div class="styled-input wide">
							<img src="https://icon-library.com/images/add-image-icon-png/add-image-icon-png-15.jpg">
						</div>
					</div>
					<div class="col-xs-12">
						<div id="btn" class="btn-lrg submit-btn">Send Message</div>
					</div>
			</div>
		</div>

	</form>
