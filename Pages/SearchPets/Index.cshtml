@page
@model PetSearch.Pages.SearchPets.IndexModel

@{
    Models.CaptureData data = new Models.CaptureData();
    ViewData["Title"] = "Index";
}

<h1>SEARCH PETS</h1>
<h1>@HttpContext.Session.GetInt32("user_id")</h1>
<h1>@HttpContext.Session.GetInt32("user_role")</h1>

<div class="col-xs-12">
    @if(@HttpContext.Session.GetInt32("user_status") == 2)
    {
        <a href="~/SearchPets/Create">
            <div id="btn" class="btn-lrg submit-btn">Insert Data</div>
        </a>
    }
    else
    {
        <a href="~/Users/Login">
            <div id="btn" class="btn-lrg submit-btn">Insert Data</div>
        </a>
    }
</div>
<div class="col-xs-12 mt-4">
    @if(@HttpContext.Session.GetString("user_role") == "admin")
    {
        <a href="~/SearchPetsAdm">
            <div id="btn" class="btn-lrg submit-btn">Request</div>
        </a>
    }
</div>

<section class="about section-padding">
                <div class="container text-light" id="search_pet">
                    <div class="row">

                        <div class="col-12">
                            <h2 class="mb-5">Searching Pets</h2>
                        </div>
                        @foreach (var item in Model.SearchPet) {
                            if(item.Status == 2)
                            {
                                <div class="col-lg-4 col-12">
                            <div>
                                <img src="~/images/search_pet/@Html.DisplayFor(modelItem => item.ImagePet)" alt="" width="400" height="300">
                                
                                <div class="team-info">
                                    <h3 class="mt-3 mb-0">@Html.DisplayFor(modelItem => item.AnimalName)</h3>
                                    <p>Pet Data</p>
                                    <ul >
                                        <li>
                                            Race: @Html.DisplayFor(modelItem => item.Breed)
                                        </li>
                                        <li>
                                            Color: @Html.DisplayFor(modelItem => item.Color)
                                        </li>
                                         <li>
                                            Last seen address: @Html.DisplayFor(modelItem => item.LastSeenAddress)
                                        </li>
                                        <li>
                                            Message: @Html.DisplayFor(modelItem => item.Message)
                                        </li>
                                    </ul>
                                    <p>Owner Data</p>
                                    <ul >
                                        <li>
                                            Phone Number: @Html.DisplayFor(modelItem => item.Cellphone)
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                            }
                        }
                    </div>
                </div>
    
</section>
