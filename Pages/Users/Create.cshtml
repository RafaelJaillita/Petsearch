@page
@model PetSearch.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Register";
}

<div id="bottom">
<form class="form" method="post">
    <h1>Register</h1>
     <div class="cont">

        <span asp-validation-for="User.FullName" class="text-danger"></span>
        <div class="input-cont">
            <i class="fas fa-user icon"></i>
                <input asp-for="User.FullName" class="form-control" placeholder="Full Name"/>
         </div>
         
         <span asp-validation-for="User.EmailAddress" class="text-danger"></span>
         <div class="input-cont">
            <i class="fas fa-envelope icon"></i>
                <input asp-for="User.EmailAddress" class="form-control" placeholder="Email Address"/>
         </div>
         
         <span asp-validation-for="User.Password" class="text-danger"></span>
         <div class="input-cont">
            <i class="fas fa-key icon"></i>
                <input asp-for="User.Password" class="form-control" placeholder="Password" type="password"/>
         </div>
         <input type="submit" value="Create" class="button">
         <p class="p">By signing up, you agree to our Terms of Use and Privacy Policy.</p>
         <p class="p">You do not have an account?<a class="link" href="~/Users/Login">Log In</a></p>

     </div>
    </form>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
